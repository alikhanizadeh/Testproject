<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- حالت فشرده شدن (Pressed) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D1D9E6" /> <!-- رنگ پس‌زمینه هنگام فشار دادن -->
            <corners android:radius="12dp" /> <!-- گوشه‌های گرد -->
        </shape>
    </item>

    <!-- حالت عادی (Default) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- رنگ پس‌زمینه -->
            <stroke android:width="1dp" android:color="#D1D9E6" /> <!-- حاشیه -->
            <corners android:radius="12dp" /> <!-- گوشه‌های گرد -->
        </shape>
    </item>
</selector>
